target 'Weather' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!
    
    # Pods for Weather
    pod 'Alamofire', '~> 4.8.2'
    pod 'SVProgressHUD'
    pod 'SwiftLint'

    target 'WeatherTests' do
        inherit! :search_paths
        # Pods for testing
    end
    
    target 'WeatherUITests' do
        inherit! :search_paths
        # Pods for testing
    end
    
end
